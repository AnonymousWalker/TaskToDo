<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/toDoReminderTextViewBody"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:ellipsize="middle"
        android:gravity="center|start"
        android:paddingLeft="20dp"
        android:text="Task To Do "
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/toDoReminderRemoveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|center"
        android:background="@color/colorPrimary"
        android:text="DISMISS"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/toDoReminderRemoveBtn"
        android:layout_below="@id/toDoReminderTextViewBody"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/reminderBodyTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/reminderBodyTextColor"
            android:textSize="22dp" />


    </LinearLayout>

</RelativeLayout>